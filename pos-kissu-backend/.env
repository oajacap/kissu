# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# IMPORTANTE: Usar las credenciales de tu servidor MySQL (Railway, FreeSQLDatabase, etc.)
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=sistema_facturacion
DB_CONNECTION_LIMIT=10

# ============================================
# CONFIGURACIÓN JWT
# ============================================
JWT_SECRET=kissu_secret_key
JWT_EXPIRES_IN=24h

# ============================================
# CONFIGURACIÓN CORS
# ============================================
# En desarrollo permite todas las origins
CORS_ORIGIN=*
# En producción especifica tu dominio
# CORS_ORIGIN=https://tu-cafeteria.com

# ============================================
# CONFIGURACIÓN DE SINCRONIZACIÓN OFFLINE
# ============================================
SYNC_BATCH_SIZE=50
SYNC_RETRY_ATTEMPTS=3

# ============================================
# CONFIGURACIÓN DE IMPRESIÓN
# ============================================
PRINT_MARGIN_TOP=10
PRINT_MARGIN_LEFT=5
PRINT_LOGO_PATH=/assets/logo.png

# ============================================
# LOGS
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log